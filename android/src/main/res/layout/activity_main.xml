<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/metastone_bg"
    tools:context="net.demilich.metastone.android.MainActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/logo"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/logo"
            android:orientation="vertical"
            android:layout_centerVertical="true">

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/playButton"
                android:text="@string/play"
                style="@style/Metastone.ButtonStyle"/>

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/deckBuilderButton"
                android:layout_below="@id/playButton"
                android:text="@string/deck_builder"
                style="@style/Metastone.ButtonStyle"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/simulatorButton"
                android:layout_below="@id/deckBuilderButton"
                android:text="@string/simulator"
                style="@style/Metastone.ButtonStyle"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sandboxButton"
                android:layout_below="@id/simulatorButton"
                android:text="@string/sandbox"
                style="@style/Metastone.ButtonStyle"/>

    </LinearLayout>
</RelativeLayout>

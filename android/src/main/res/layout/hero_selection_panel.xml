<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:background="@drawable/panel"
    tools:context="net.demilich.metastone.android.HeroSelectionActivity">

    <TextView
        android:id="@+id/hero_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        tools:text="WARRIOR"
        style="@style/Metastone.GlowTextStyle.Dark"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/hero_portrait"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/hero_class"
        android:layout_marginTop="12dp"
        tools:src="@drawable/garrosh_animated"/>

    <TextView
        android:id="@+id/hero_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/hero_portrait"
        android:textColor="@color/colorPrimary"
        tools:text="Garosh"
        style="@style/Metastone.GlowTextStyle"/>

    <Spinner
        android:id="@+id/behavior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/hero_name"
        android:layout_marginTop="12dp"
        android:background="@drawable/boxbg"
        android:spinnerMode="dropdown"
        tools:listitem="@layout/metastone_spinner_dropdown_item"/>

    <Spinner
        android:id="@+id/deck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/behavior"
        android:layout_marginTop="15dp"
        android:background="@drawable/boxbg"
        android:spinnerMode="dropdown"
        tools:listitem="@layout/metastone_spinner_dropdown_item"/>

    <CheckBox
        android:id="@+id/hide_cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:text="@string/hide_cards"
        android:textColor="@color/colorPrimary"
        style="@style/Metastone.GlowTextStyle"/>

</RelativeLayout>
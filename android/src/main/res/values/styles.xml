<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Metastone" parent="AppTheme"/>

    <style name="Metastone.TextStyle">
        <item name="fontPath">fonts/OPTIBelwe-Medium.otf</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Metastone.ButtonStyle" parent="Metastone.GlowTextStyle">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/metastone_button</item>
    </style>

    <style name="Metastone.GlowTextStyle" parent="Metastone.TextStyle">
        <item name="android:shadowColor">@color/colorAccent</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">8</item>
    </style>

    <style name="Metastone.SpinnerItemStyle" parent="Metastone.GlowTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:popupBackground">@null</item>
        <item name="android:background">@drawable/metastone_button</item>
    </style>

    <style name="Metastone.SpinnerDropDownItemStyle" parent="Metastone.GlowTextStyle">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:background">@drawable/metastone_button2</item>
    </style>

</resources>
